{% extends "ONGRDemoBundle::layout.html.twig" %}

{% block title %}
    {{ product.title }} - {{ parent() }}
{% endblock %}

{% block canonical_meta %}
    <link rel="canonical" href="{{ path('ongr_product', { 'document' : product }) }}">
{% endblock %}

{% block breadcrumbs_inner %}
    {% if product.getCategories[0] is defined %}
        {{ render(url('_ongr_breadcrumbs', {selectedCategory : product.getCategories[0], theme: 'product_breadcrumbs'}), {strategy: 'ssi'}) }}
        <li class="active">{{ product.title }}</li>
    {% endif %}
{% endblock %}

{% block about %}
    <div class="panel-heading text-center">
        <h2>{{ product.title }}</h2>
    </div>
    <div class="panel-body text-center">
        <div class="product-description">{{ product.longDescription | raw }}</div>
    </div>
{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="row">
        <div class="col-sm-5">
            {% image '@ONGRDemoBundle/Resources/public/images/logo.png' %}
                <img src="{{ asset_url }}" class="img-rounded scaled-image"/>
            {% endimage %}
            <hr/>
            <div class="well text-center">
                <span class="price">â‚¬ {{ product.price }}</span>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="panel panel-default product-panel">
                {{ block('about') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block content_wrapper %}
    {{ block('content') }}
{% endblock %}
